<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fin" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#ABE0D5</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/daylight_splashscreen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="noAction" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Fin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>